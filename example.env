# ===========================================
# UNIFIED ENVIRONMENT VARIABLES
# Armed Forces Welfare Management System
# This file contains ALL environment variables for both frontend and backend
# ===========================================

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
FRONTEND_PORT=3000
API_VERSION=v1

# ===========================================
# FRONTEND VARIABLES (Next.js - Public)
# ===========================================
# Note: All frontend environment variables must start with NEXT_PUBLIC_
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Armed Forces Welfare System
NEXT_PUBLIC_ENVIRONMENT=development

# Firebase Client Configuration (Frontend - Public)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional Frontend Variables
NEXT_PUBLIC_MAX_FILE_SIZE=4194304
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===========================================
# BACKEND VARIABLES (Server - Private)
# ===========================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/armed_forces_welfare
DB_NAME=armed_forces_welfare

# Firebase Admin SDK Configuration (Backend - Private)
FIREBASE_API_KEY=your-firebase-api-key-here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK Private Configuration
FIREBASE_WEB_API_KEY=your-firebase-web-api-key
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY='-----BEGIN PRIVATE KEY-----\nYOUR_COMPLETE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----'
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long-for-production-use
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key-also-32-characters-minimum-change-this-too
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration
BCRYPT_ROUNDS=12

# Email Service Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-specific-password
EMAIL_FROM_NAME=Armed Forces Welfare System
EMAIL_FROM_ADDRESS=noreply@yourapp.com
EMAIL_SERVICE=gmail

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-production-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,txt

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
MAX_LOG_FILES=5
MAX_LOG_SIZE=10485760

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SMS_API_KEY=your-sms-service-api-key
SMS_API_SECRET=your-sms-service-secret

# ===========================================
# OPTIONAL: MONITORING & ANALYTICS
# ===========================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ===========================================
# EMERGENCY CONFIGURATION
# ===========================================
EMERGENCY_CONTACT_EMAIL=emergency@yourapp.com
EMERGENCY_CONTACT_PHONE=+91-9999999999

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# For production deployments
# NEXT_PUBLIC_API_URL=https://your-api-domain.com/api
# NEXT_PUBLIC_SOCKET_URL=https://your-api-domain.com
# CORS_ORIGIN=https://your-frontend-domain.com
# NODE_ENV=production
